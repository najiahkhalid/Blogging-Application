<%- include("partials/header.ejs") %> 

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <% if(posts.length > 0) { %>
                <% posts.forEach(element => { %>
                    <div class="container">
                        <div class="row row-cols-1">
                            <div class="col">
                                    <div class="card shadow-sm" style="position: relative;">
                                        <a href="/post/<%= element.id %>/delete">
                                            <div class="trash-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-trash3" viewBox="0 0 16 16">
                                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                                                  </svg>
                                            </div>
                                        </a>
                                        <a href="post/<%= element.id %>/edit">
                                            <div class="edit-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-pen" viewBox="0 0 16 16">
                                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                                                  </svg>
                                            </div>
                                        </a>
                                        <a href="/post/<%= element.id %>">
                                            <img src="<%= element.filePath %>" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Thumbnail">
                                            <div class="card-body">
                                                <div class="post-preview">
                                                    <h2 class="post-title mb-2"> <%= element.title %></h2> 
                                                    <h7 class="post-subtitle"><%= element.description %></h7>
                                                    <p style="font-style: italic; opacity: 65%; ">
                                                        Posted by <h5><%= element.author %></h5>
                                                        on <%= element.date.toDateString() %>
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4" />
                <% }); %>
            <% } else { %>
                <h2>No posts yet. Create a new post.</h2>
                <div class="create-button"><a href="/create"><button class="btn-create mt-4 mb-4">Create Now</button></a></div>
            <% } %>
        </div>
    </div>
</div>       

<%- include("partials/footer.ejs") %>
